---
import { getRelativeLocaleUrl } from "astro:i18n";
import { NavLinks, SiteInfo } from "src/constants";

const links = NavLinks.map((link) => ({
  ...link,
  url: getRelativeLocaleUrl("es", link.url),
}));

console.log(links);
---

<header>
  <nav>
    <div class="logo">{SiteInfo.TITLE}</div>
    <input type="checkbox" id="nav-toggle" class="nav-toggle" />
    <label for="nav-toggle" class="nav-toggle-label">
      <span></span>
    </label>
    <ul>
      {
        links.map((link) => (
          <li>
            <a href={link.url}>{link.name}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style>
  header {
    background-color: rgba(var(--accent-dark), 0.9);
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
    height: var(--nav-height);
  }
  nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
  }
  nav li {
    margin-left: 1rem;
  }
  nav a {
    color: var(--text);
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s ease;
  }
  nav a:hover {
    color: rgb(var(--accent-light));
  }
  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: rgb(var(--accent-light));
  }
  footer {
    background-color: rgba(var(--accent-dark), 0.9);
    color: var(--text);
    text-align: center;
    padding: 1rem;
  }
  .nav-toggle {
    display: none;
  }
  .nav-toggle-label {
    display: none;
    cursor: pointer;
  }
  @media (max-width: 768px) {
    nav ul {
      position: fixed;
      top: var(--nav-height);
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba(var(--accent-dark), 0.95);
      flex-direction: column;
      justify-content: flex-start;
      padding-top: 2rem;
      transform: translateX(-100%);
      transition: transform 0.3s ease-in-out;
    }
    nav li {
      margin: 1rem 0;
    }
    .nav-toggle-label {
      display: block;
      padding: 1rem;
    }
    .nav-toggle-label span,
    .nav-toggle-label span::before,
    .nav-toggle-label span::after {
      display: block;
      background: var(--text);
      height: 2px;
      width: 2rem;
      position: relative;
    }
    .nav-toggle-label span::before,
    .nav-toggle-label span::after {
      content: "";
      position: absolute;
    }
    .nav-toggle-label span::before {
      bottom: 7px;
    }
    .nav-toggle-label span::after {
      top: 7px;
    }
    .nav-toggle:checked ~ ul {
      transform: translateX(0);
    }
  }
</style>
